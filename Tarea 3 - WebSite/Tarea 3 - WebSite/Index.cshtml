@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Home Page";

    var db = Database.Open("Database");
    var hoy = DateTime.Today;
    var noticias = db.Query("SELECT Id, Titulo, Resumen FROM Noticias WHERE Fecha >= @0 AND Fecha < @1 ORDER BY Fecha DESC", hoy, hoy.AddDays(1));
}

<h2>Últimas noticias</h2>

@if (noticias.Any())
{
    <ul>
        @foreach (var noticia in noticias)
        {
            <li>
                <a href="~/detalle.cshtml?id=@noticia.Id">@noticia.Titulo</a>
                <br />
                <p>@noticia.Resumen</p>
            </li>
        }
    </ul>
}
else
{
    <p>No hay noticias para el día de hoy.</p>
}