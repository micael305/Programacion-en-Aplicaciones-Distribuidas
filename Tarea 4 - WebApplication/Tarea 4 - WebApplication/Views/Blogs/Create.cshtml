@model Tarea_4___WebApplication.Blogs

@{
    ViewBag.Title = "Crear Nuevo Blog"; 
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-primary">Crear Nueva Entrada de Blog</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="p-4 border rounded shadow-sm bg-light">
                    <h4>Datos del Blog</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Titulo, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", placeholder = "Título de la publicación" } })
                        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Contenido, new { @class = "form-label fw-bold" })
                        @Html.TextAreaFor(model => model.Contenido, new { @class = "form-control", rows = 8, placeholder = "Escribe el contenido completo del blog aquí..." })
                        @Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.FechaCreacion, new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.FechaCreacion, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.FechaCreacion, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" value="Publicar Entrada" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            }

            <div class="mt-4 text-center">
                @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
</div>