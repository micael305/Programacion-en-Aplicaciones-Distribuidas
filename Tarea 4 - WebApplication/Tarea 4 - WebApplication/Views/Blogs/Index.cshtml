@model IEnumerable<Tarea_4___WebApplication.Blogs>

@{
    ViewBag.Title = "Listado de Blogs"; 
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary">Blogs publicados</h2>
        @Html.ActionLink("Crear Nuevo Blog", "Create", null, new { @class = "btn btn-success btn-lg" })
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th style="width: 40%;">
                        @Html.DisplayNameFor(model => model.Contenido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </th>
                    <th class="text-center" style="width: 20%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            <p class="text-truncate mb-0" style="max-width: 450px;">
                                @Html.DisplayFor(modelItem => item.Contenido)
                            </p>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm me-2" }) @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm me-2" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            Aún no hay entradas de blog. ¡Sé el primero en crear una!
        </div>
    }
</div>