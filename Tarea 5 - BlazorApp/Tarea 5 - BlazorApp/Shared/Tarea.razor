<li class="task-item list-group-item">
    <div class="tarea-left">
        <input class="form-check-input" type="checkbox" id="@($"tarea-{tarea.Id}")" @bind="tarea.Completada" />
        <div class="tarea-content">
            <label for="@($"tarea-{tarea.Id}")" class="task-label @(tarea.Completada ? "completed" : "")">
                @tarea.Nombre
            </label>
        </div>
    </div>

    <div class="tarea-right">
        <div class="task-datetime">
            Vence el: @tarea.FechaHora?.ToString("g")
        </div>
        <div class="item-actions">
            <button @onclick="() => OnEditar.InvokeAsync(tarea)" class="btn btn-sm btn-secondary" title="Editar">Editar</button>
            <button @onclick="() => OnEliminar.InvokeAsync(tarea)" class="btn btn-sm btn-danger ms-2" title="Eliminar" aria-label="Eliminar tarea">&times;</button>
        </div>
    </div>
</li>

@code {
    [Parameter]
    public TareaModel tarea { get; set; } = new();
    [Parameter]
    public EventCallback<TareaModel> OnEliminar { get; set; }
    [Parameter]
    public EventCallback<TareaModel> OnEditar { get; set; }
}